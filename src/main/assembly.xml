<assembly>
	<id>standalone</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target/cassandra-webconsole</directory>
			<outputDirectory>/webapp</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/webapp</directory>
			<outputDirectory>/log</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>/webapp/WEB-INF/lib</outputDirectory>
			<excludes>
				<exclude>**/*sources.jar</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>